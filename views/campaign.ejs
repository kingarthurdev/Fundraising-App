    <style>
        .fa-brands,
        .fab {
            font-family: "Font Awesome 6 Brands" !important;
        }

        ::selection {
            color: #fff;
            background: var(--primary-color);
        }

        .popup {
            position: fixed;
            left: 50%;
        }

